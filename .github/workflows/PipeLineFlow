name: Composite Action Pipeline

on:
  push:
    branches: [ main ]

jobs:

  validate:
    name: Validate
    runs-on: ubuntu-latest
    steps:
      - run: echo "Validation successful"

  scan:
    name: Security Scan
    runs-on: ubuntu-latest
    steps:
      - run: echo "Security scan running..."

  deploy-prereq:
    name: Deploy Pre-Requisites
    runs-on: ubuntu-latest
    needs: validate
    steps:
      - run: echo "Pre-requisites ready"

  deploy:
    name: Deploy Application
    runs-on: ubuntu-latest
    needs: deploy-prereq
    steps:
      - run: echo "Application deployed"
